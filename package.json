{
  "name": "@verify-media/verify-client",
  "version": "1.0.4",
  "description": "a client sdk for interacting with the verify protocol",
  "keywords": [
    "bcl",
    "verifymedia",
    "verify protocol"
  ],
  "author": "bcl",
  "license": "Apache License",
  "type": "module",
  "main": "./dist/prod/index.cjs",
  "module": "./dist/prod/index.es.js",
  "exports": {
    "require": "./dist/prod/index.cjs",
    "development": "./dist/dev/index.es.js",
    "default": "./dist/prod/index.es.js"
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint --fix \"src/**/\"",
    "format": "prettier --write './src/**/*.{ts,tsx}' && prettier --write './example/**/*.{ts,tsx}'",
    "lint:check": "eslint \"src/**/\"",
    "lint:ci": "npm run lint:check",
    "test": "cross-env NODE_ENV=test jest --verbose --coverage --setupFiles dotenv/config",
    "test:watch": "cross-env NODE_ENV=test jest --watch --setupFiles dotenv/config",
    "test:ci": "cross-env NODE_ENV=test jest --runInBand --ci --coverage --coverageDirectory=coverage",
    "prebuild": "rm -rf ./dist && node ./src/scripts/version.mjs",
    "build:prod": "cross-env NODE_ENV=production microbundle --tsconfig ./tsconfig.json --format es,cjs  --output dist/prod/index.js",
    "watch:prod": "cross-env NODE_ENV=production microbundle watch --tsconfig ./tsconfig.json --format es,cjs  --output dist/prod/index.js",
    "build:dev": "cross-env NODE_ENV=development microbundle --define process.env.NODE_ENV=development --tsconfig ./tsconfig.json --generateTypes false --format es --output dist/dev/index.js",
    "build": "rm -rf ./dist && npm run build:prod && npm run banner",
    "gen:docs": "rm -rf ./docs/api && typedoc --options typedoc.cjs",
    "analyze": "rm -rf stats.html && cross-env NODE_ENV=production microbundle --visualize",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release:verify-client": "npm run prepublishOnly && npm run version",
    "release": "npm run prepublishOnly && npm run changeset publish",
    "alpha-release": "npm run prepublishOnly && npm run changeset publish --tag alpha",
    "banner": "node ./banner.mjs"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verify-media/verify-client"
  },
  "homepage": "https://www.verifymedia.com/",
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/jest": "^29.5.8",
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "babel-plugin-dev-expression": "^0.2.3",
    "babel-plugin-transform-define": "^2.1.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-console": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.0.2",
    "microbundle": "^0.15.1",
    "prettier": "^3.0.3",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.3",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.2.2",
    "zx": "^7.2.3"
  },
  "engines": {
    "node": ">=18.15.0",
    "npm": "9.5.0"
  },
  "dependencies": {
    "@lit-protocol/lit-node-client": "^4.2.0",
    "@types/jsdom": "^21.1.6",
    "date-fns": "^3.3.1",
    "ethers": "^5.7.0",
    "form-data": "^4.0.0",
    "joi": "^17.12.0",
    "jsdom": "^24.0.0",
    "node-fetch": "^3.3.2",
    "pino": "^8.16.1",
    "siwe": "^2.0.5"
  }
}
